<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SessionThree.View.User.LoginPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Entry Text="{Binding Email}" Keyboard="Email" Placeholder="Email:" x:Name="EmailInput"></Entry>
            <Entry Text="{Binding Password}" Placeholder="Password:" IsPassword="True" x:Name="PasswordInput"></Entry>
            <Button Text="Login" x:Name="LoginBtn" Clicked="LoginBtn_Clicked"></Button>
            <Button Text="Register" x:Name="RegisterBtn" Clicked="RegisterBtn_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>